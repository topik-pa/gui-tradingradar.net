        a(href="#", title="Vai alla analisi del titolo")
          img(src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==", alt="Titolo con segnale Golden Cross Down")
          h5
