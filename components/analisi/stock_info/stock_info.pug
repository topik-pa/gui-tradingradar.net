
section(id="stock_info")
  h2 Informazioni, analisi tecnica e rassegna stampa #{stock.name}
  div 
    span Nome: #{stock.name}
    span ISIN: #{stock.isin}
  div(class="info")
    h3 Informazioni #{stock.name}
    div 
      div(class="last-price") Ultimo prezzo rilevato: 
        span
      div(class="volatility") Volatilità: 
        span
      div(class="first")
        div(class="profile")
          h4 Profilo 
          div 
            a(href="#", target="_blank", rel="noopener noreferrer") [Continua sull'originale]
        div(class="comment")
          h4 Commento
          div 
            a(href="#", target="_blank", rel="noopener noreferrer") [Continua sull'originale]
      div(class="second")
        div(class="dividends")
          h4 Dividendi 
            a(href="#", target="_blank", rel="noopener noreferrer") [Vedi sull'originale]
          div 
            div(class="divYield") Div. Yield (%): 
              span
            div(class="divValue") Valore dividendo (€): 
              span
            div(class="lastDiv") Data ultimo dividendo: 
              span
        div(class="average")
          h4 Medie mobili 
            a(href="#", target="_blank", rel="noopener noreferrer") [Vedi sull'originale]
          div 
            div(class="mm20") Media mobile 20 gg: 
              span
            div(class="mm40") Media mobile 40 gg: 
              span
            div(class="mm100") Media mobile 100 gg: 
              span
        div(class="minmax")
          h4 Minimi e massimi
            a(href="#", target="_blank", rel="noopener noreferrer") [Vedi sull'originale]
          div 
            div(class="absMax") Massimo assoluto: 
              span
            div(class="absMin") Minimo assoluto: 
              span
            div(class="max") Massimo anno corrente: 
              span
            div(class="min") Minimo anno corrente: 
              span              
        div(class="performance")
          h4 Performance
            a(href="#", target="_blank", rel="noopener noreferrer") [Vedi sull'originale]
          div 
            div(class="perf1M") Performance (1 mese): 
              span
            div(class="perf6M") Performance (6 mesi): 
              span
            div(class="perf1Y") Performance (1 anno): 
              span
  div(class="analysis")
    h3 Analisi tecnica #{stock.name}
    div 
      div(class="borsa-italiana")
        h4 Borsa Italiana
        div(class="resistance") Resistenza: 
          span
        div(class="support") Supporto: 
          span
        div(class="rsi") RSI: 
          span
        div(class="evaluation") Valutazione: 
          span
        div(class="rating") Rating: 
          span
      div(class="il-sole-24-ore")
        h4 Il Sole 24 Ore
        div(class="short-tend") Tendenza breve periodo: 
          span
        div(class="med-tend") Tendenza medio periodo:
          span
      div(class="milano-finanza")
        h4 Milano Finanza
        div(class="rating") Rating [A-E]: 
          span
        div(class="risk") Risk [0-100]: 
          span
        div(class="rsi") RSI: 
          span                
      div(class="soldi-on-line")
        h4 SoldiOnLine
        div(class="target") Prezzo obiettivo: 
          span
        div(class="evaluation") Giudizio: 
          span      
      div(class="teleborsa")
        h4 Teleborsa
        div(class="resistance") Resistenza: 
          span
        div(class="support") Supporto: 
          span
        div(class="trend") Trend: 
          span        

  div(class="news")
    h3 Rassegna stampa #{stock.name}
    ul 
