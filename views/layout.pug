-
  let prod = process.env.NODE_ENV === 'production'
  let proj_name = 'tradingradar.net'
  let proj_url = 'https://www.tradingradar.net'
  let description = 'Analisi tecniche, Informazioni e Rassegna Stampa dei titoli del FTSE Mib'
  let copy = 2022
  let owner = 'Marco Pavan'
  let fbAppId = 238576103449837
  let googleSiteVerification = 'hl74Eak8YodPVXxEm6CpfxpYUWsdNTIiW4FGPEUIKE8'
  let sc_project = 11043457
  let sc_security = '9f87886c'
  let GATagId = 'UA-109143172-1'

doctype html
html(lang=locale)
  head
    block meta 
      meta(charset="utf-8")
      meta(name="google-site-verification" content=googleSiteVerification)
      meta(property="fb:app_id" content=fbAppId)
      meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
      meta(name="author" content=owner)
    link(rel="shortcut icon", href="/public/favicon.ico", type="image/x-icon")
    if prod
        link(rel="stylesheet", type="text/css", href="/dist/main.css")
        script(defer, src='/dist/main.js')
        script(async, defer, crossorigin="anonymous", src="https://connect.facebook.net/it_IT/sdk.js#xfbml=1&version=v13.0&appId=" + fbAppId + "&autoLogAppEvents=1" nonce="MWhn9uhC")
        script(async, defer, src='https://www.statcounter.com/counter/counter.js')
        script(async, defer, src="https://www.googletagmanager.com/gtag/js?id=" + GATagId)
        script.
          var sc_project = #{sc_project};
          var sc_invisible = 1;
          var sc_security = "#{sc_security}";
        script. 
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', 'UA-109143172-1');
        script(type='application/ld+json').
          {
            "@context": "https://schema.org",
            "@type": "WebSite",
            "url": "#{proj_url}",
            "name": "#{proj_name}",
            "description": "#{description}",
            "image": "https://www.tradingradar.net/assets/images/logo.png",
            "author": {
              "@type": "Person",
              "name": "#{owner}"
            },
            "copyrightHolder": {
              "@type": "Person",
              "name": "#{owner}"
            }
          }
    else
        link(rel="stylesheet", type="text/css", href="/styles/style.css")
        script(src='/scripts/index.js', type='module')
  body(id=id)
    include ../components/shared/header/header.pug
    block main
    block footer
      include ../components/shared/footer/footer.pug
      include ../components/shared/cookie_layer/cookie_layer.pug
      include ../components/shared/goto_top/goto_top.pug
    div(id="fb-root")

